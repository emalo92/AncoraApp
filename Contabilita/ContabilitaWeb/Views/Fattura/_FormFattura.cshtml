@using ContabilitaWeb.Models
@model Fattura

@{
    var importoValue = Model?.Importo != null ? Model.Importo.ToString() : "";
}

<div class="row mt-4">
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
        <div class="form-floating mb-3">
            <input id="idInputID" type="hidden" asp-for="Id" />
            <input id="idInputNumero" type="text" asp-for="Numero" class="form-control" placeholder="Numero">
            <label asp-for="Numero"></label>
        </div>
    </div>
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
        <div class="form-floating">
            <input id="idInputData" type="date" asp-for="Data" class="form-control" placeholder="Data">
            <label asp-for="Data"></label>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 mt-3">
        <div class="form-floating ">
            <input id="idInputImporto" class="form-control" placeholder="Importo" value="@importoValue">
            <label asp-for="Importo"></label>
        </div>
    </div>
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 mt-3">
        <div class="form-floating">
            <select id="idInputTipo" type="text" asp-for="Tipo" class="form-select" placeholder="Tipo">
                <option>Fattura</option>
                <option>Nota di credito</option>
            </select>
            <label asp-for="Tipo"></label>
        </div>
    </div>
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 mt-3">
        <div class="form-floating input-group">
            <input id="idInputAzienda" type="hidden" asp-for="Azienda" class="form-control">
            <input id="idInputAziendaRag" type="text" asp-for="AziendaNavigation.RagioneSociale" class="form-control" placeholder="Seleziona l'azienda per filtrare" readonly>
            <label asp-for="Azienda"></label>
            <div class="input-group-append">
                <button class="btn btn-success dropdown-toggle" type="button" onclick="ShowDynamicViewAllAziende('/Azienda/GetAllAziende')" style="height: calc(3.5rem + 2px); border-start-start-radius:0; border-end-start-radius:0">
                    Seleziona
                </button>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3 text-end">
    <div class="col-12">
        <label id="btnRegistraFattura" class="me-3">
            <button type="button" class="btn btn-success" title="Registra la fattura inserita" onclick="RegistraFattura()"><i class="fa fa-save"></i> Registra </button>
        </label>
        <label id="btnEliminaFattura" class="me-3" style="display:none">
            <button type="button" class="btn btn-danger" title="Elimina la fattura visualizzata'" onclick="EliminaFattura()"><i class="fa fa-trash"></i> Elimina </button>
        </label>
        <label id="btnAnnulla" class="me-3">
            <button type="button" class="btn btn-secondary" title="Elimina la fattura visualizzata'" onclick="Annulla()"><i class="fa fa-close"></i> Annulla </button>
        </label>
    </div>
</div>
