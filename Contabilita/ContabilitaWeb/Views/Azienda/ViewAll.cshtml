@using ContabilitaWeb.Models
@using ContabilitaWeb.Models.Paginate
@model List<Azienda>
@{
    var pagination = (Pagination)ViewBag.Pagination;
}
<h4>Visualizza</h4>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Partita IVA</th>
            <th scope="col">Ragione Sociale</th>
            <th scope="col">Telefono</th>
            <th scope="col">Email</th>
            <th scope="col">IBAN</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null) {
        foreach(var azienda in Model) {
            <tr>
                <th scope="row">@azienda.PartitaIva</th>
                <td>@azienda.RagioneSociale</td>
                <td>@azienda.Telefono</td>
                <td>@azienda.Email</td>
                <td>@azienda.Iban</td>
            </tr>
            }
        }
    </tbody>
</table>
@if (pagination.IsPaginated)
    {
        <div>
            <partial name="_PaginationBarPartial" model="@pagination" />
        </div>
    }