@using ContabilitaWeb.Models
@model List<Movimento>


@{
    var totale = 0M;
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Azienda</th>
            <th scope="col">Tipo</th>
            <th scope="col">Numero</th>
            <th scope="col">Importo</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            var coeff = -1;
            var textClass = "";
            var bgColor = "";
            foreach (var movimento in Model)
            {
                if (movimento.Tipo != "Fattura")
                {
                    coeff = 1;
                }
                textClass = movimento.Tipo == "Pagamento" ? "fw-bold" : "";
                bgColor = movimento.Tipo == "Nota di credito" ? "#c5e4cd" : movimento.Tipo == "Pagamento" ? "#ffced4" : "";
                <tr class="@textClass" style="background-color:@bgColor">
                    <td>@movimento.Data.ToString("dd/MM/yyyy")</td>
                    <td>@movimento.RagioneSociale</td>
                    <td>@movimento.Tipo</td>
                    <td>@movimento.Numero</td>
                    <td>@movimento.Importo &euro;</td>
                    @switch (@movimento.Tipo)
                    {
                        case "Fattura":
                            totale -= movimento.Importo;
                            break;
                        case "Pagamento":
                        case "Nota di credito":
                        default:
                            totale += movimento.Importo;
                            break;
                    }
                </tr>
            }
            totale *= coeff;
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="fw-bold">Saldo: @totale &euro;</td>
        </tr>
    </tfoot>
</table>