
@{
    var totale = 0;
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Azienda</th>
            <th scope="col">Tipo</th>
            <th scope="col">Numero</th>
            <th scope="col">Importo</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null) {
            foreach(var azienda in Model) {
            <tr>
                <th scope="row">@azienda.PartitaIva</th>
                <td>@azienda.RagioneSociale</td>
                <td>@azienda.Telefono</td>
                <td>@azienda.Email</td>
                <td>@azienda.Iban</td>
            </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="fw-bold">Saldo: @totale</td>
        </tr>
    </tfoot>
</table>